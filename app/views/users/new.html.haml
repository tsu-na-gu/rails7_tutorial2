- provide(:title, 'Sign up')
%div.form-container
  %div.flex.min-h-full.flex-col.justify-center.py-12.sm:px-6.lg:px-8
    %div.sm:mx-auto.sm:w-full.sm:max-w-m
      %h3.mt-6.text-center.text-2xl.font-bold.leading-9.tracking-tight.text-gray-90 Sign up form

    %div{class: "mt-10 sm:mx-auto sm:w-full sm:max-w-[480px]"}
      %div{class: "bg-white px-6 py-12 shadow sm:rounded-lg sm:px-12"}
        = render 'shared/error_message'
        = simple_form_for @user do |f|
          %div
            = f.input :name,  class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'
          %div
            = f.input :email, as: :email, required: true, placeholder: 'user@domain.com',  class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'
          %div
            = f.input :password, class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'
          %div
            = f.input :password_confirmation, label: "Confirmation", class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'
          %div.mt-10
            = f.button :submit, "Create my account", class: " w-full rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"