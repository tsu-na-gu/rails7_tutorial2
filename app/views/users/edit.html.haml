- provide(:title, "User Edit")
%h1 Update your profile

%div.row
  %div.col-md-6.col-md-offset-3
    = render 'shared/error_message', object: @user
    = simple_form_for @user do |f|
      = f.input :name, input_html: { class: 'form-control' }
      = f.input :email, as: :email, required: true, input_html: { class: 'form-control' }
      = f.input :password, input_html: { class: 'form-control' }
      = f.input :password_confirmation, input_html: { class: 'form-control' }
      = f.submit "Save changes", class: 'btn btn-primary'

    %div.gravatar_edit
      = gravatar_for @user
      %a{ href: "https://gravatar.com/emails", target: "_blank" } Change